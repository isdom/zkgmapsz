<language-addon>
	<!-- The name of this addon. It must be unique -->
	<addon-name>gmapsz</addon-name>
	<!-- Specifies what other addon this depends
	<depends></depends>
	-->

	<version>
		<version-class>org.zkoss.gmaps.Version</version-class>
		<version-uid>2.0_12</version-uid>
		<zk-version>3.0.0</zk-version><!-- or later -->
	</version>

	<!-- Which language this addon will be added to -->
	<language-name>xul/html</language-name>

	<!-- [Optional, Multiple] Define a JavaScript module.
		Change the version if JS files are modified, such that
		browsers will reload them.
		Note: It defines only the version. It doesn't cause ZK to load it.
	-->
	<javascript-module name="gmapsz.gmaps" version="2.0_12"/>

	<zscript>
	import org.zkoss.gmaps.*;
	import org.zkoss.gmaps.event.*;
	</zscript>

	<component>
		<component-name>ginfo</component-name>
		<component-class>org.zkoss.gmaps.Ginfo</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkoss.gmaps.render.GinfoDefault</mold-uri>
			<!-- <mold-uri>~./gmaps/ginfo.dsp</mold-uri> -->
		</mold>
	</component>

	<component>
		<component-name>gmaps</component-name>
		<component-class>org.zkoss.gmaps.Gmaps</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkoss.gmaps.render.GmapsDefault</mold-uri>
			<!-- <mold-uri>~./gmaps/gmaps.dsp</mold-uri> -->
		</mold>
	</component>

	<component>
		<component-name>gmarker</component-name>
		<component-class>org.zkoss.gmaps.Gmarker</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkoss.gmaps.render.GmarkerDefault</mold-uri>
			<!-- <mold-uri>~./gmaps/gmarker.dsp</mold-uri> -->
		</mold>
	</component>

	<component>
		<component-name>gpolyline</component-name>
		<component-class>org.zkoss.gmaps.Gpolyline</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkoss.gmaps.render.GpolylineDefault</mold-uri>
			<!-- <mold-uri>~./gmaps/gpolyline.dsp</mold-uri> -->
		</mold>
	</component>

	<component>
		<component-name>gpolygon</component-name>
		<component-class>org.zkoss.gmaps.Gpolygon</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkoss.gmaps.render.GpolygonDefault</mold-uri>
			<!-- <mold-uri>~./gmaps/gpolygon.dsp</mold-uri> -->
		</mold>
	</component>

	<component>
		<component-name>gimage</component-name>
		<component-class>org.zkoss.gmaps.Gimage</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkoss.gmaps.render.GimageDefault</mold-uri>
			<!-- <mold-uri>~./gmaps/gimage.dsp</mold-uri> -->
		</mold>
	</component>

	<component>
		<component-name>gscreen</component-name>
		<component-class>org.zkoss.gmaps.Gscreen</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkoss.gmaps.render.GscreenDefault</mold-uri>
			<!-- <mold-uri>~./gmaps/gscreen.dsp</mold-uri> -->
		</mold>
	</component>
</language-addon>
